    "version": "0.2.0",
    "configurations": [
        {
            "name": "Load",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "showLog": false,
            "program": "${workspaceRoot}",
            "args": [
                "-V",
                "load",
                "--yes",
                "--config",
                "${userHome}/Library/Application Support/lporg/config.yml"
            ]
        },
        {
            "name": "Save",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "showLog": false,
            "program": "${workspaceRoot}",
            "args": [
                "-V",
                "save",
                "--config",
                "/tmp/lp.yml"
            ]
        },
        {
            "name": "Default",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "showLog": false,
            "program": "${workspaceRoot}",
            "args": [
                "-V",
                "default"
            ]
        },
    ]
}